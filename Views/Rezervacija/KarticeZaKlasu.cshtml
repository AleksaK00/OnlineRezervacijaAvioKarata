@model InstancaLetaBO

@* Kartice za odabir klase, ukoliko klasa nije dostupna koristi se 'Grayed-out' izgled *@
@if (Model.CenaEkonomija > 0)
{
    <div class="col-md-4">
        <div class="card border-primary h-100">
            <img src="~/images/site/economyLogo.png" class="card-img-top" alt="Ekonomija ikona">
            <div class="card-body text-center">
                <h5 class="card-title">Ekonomija</h5>
                <div class="d-flex justify-content-center flex-column h-100">
                    <div class="">
                        <p>@Html.Raw(Model.BenefitiEkonomija)</p>
                    </div>
                    <div class="text-center mt-auto mb-3">
                        <h4 class="">@string.Format("{0:N2} €", Model.CenaEkonomija)</h4>
                    </div>
                </div>
            </div>
            <div class="d-flex align-items-end mb-3 justify-content-center">
                <a class="btn btn-secondary btn-lg" asp-action="OdabirKarata" asp-controller="Rezervacija"
                    asp-route-brLeta="@Model.BrLeta" asp-route-datumPolaska="@Model.DatumPolaska" asp-route-klasa="Ekonomija">Izaberi</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="col-md-4">
        <div class="card border-secondary h-100">
            <img src="~/images/site/economyLogo.png" class="card-img-top" alt="Ekonomija ikona">
            <div class="card-body text-center">
                <h5 class="card-title">Ekonomija</h5>
                <div class="d-flex justify-content-center flex-column h-100">
                    <div class="">
                        <p></p>
                    </div>
                    <div class="text-center mt-auto mb-3">
                        <h4 class="">Nije Dostupno</h4>
                    </div>
                </div>
            </div>
            <div class="d-flex align-items-end mb-3 justify-content-center">
                <button class="btn btn-secondary btn-lg" disabled>Izaberi</button>
            </div>
        </div>
    </div>
}

