@model KorisnikBO

@{
	ViewData["Title"] = "Korisnički nalog | ";
}

<section class="container">

    @* Navigaciona traka *@
    <partial name="NavigacijaNalog"></partial>

    <div class="row mt-3">
        <div class="col-md-12 px-4 py-4 bg-white border border-primary rounded-3">

            <h1 class="text-center">Dashboard</h1>

            @* Ispis svih bitnih informacija o korisnickom nalogu *@
            <div class="container-fluid p-1 mt-5">
                <div class="row g-3">

                    <div class="col-md-6">
                        <div class="p-2 display-6 text-center border border-primary rounded-3 h-100 align-content-center">Korisničko ime: <span class="text-primary">@Model.KorisnickoIme</span></div>
                    </div>
                    <div class="col-md-6">
                        <div class="p-2 display-6 text-center border border-primary rounded-3 h-100 align-content-center">email: <span class="text-primary">@Model.Email</span></div>
                    </div>

                    <div class="col-md-6">
                        <div class="p-2 display-6 text-center border border-primary rounded-3 h-100 align-content-center">Ime: <span class="text-primary">@Model.Ime</span></div>
                    </div>
                    <div class="col-md-6">
                        <div class="p-2 display-6 text-center border border-primary rounded-3 h-100 align-content-center">Prezime: <span class="text-primary">@Model.Prezime</span></div>
                    </div>

                    <div class="col-md-6">
                        <div class="p-2 display-6 text-center border border-primary rounded-3 h-100 align-content-center">Adresa: <span class="text-primary">@Model.Adresa</span></div>
                    </div>
                    <div class="col-md-6">
                        <div class="p-2 display-6 text-center border border-primary rounded-3 h-100 align-content-center">Broj rezervacija: <span class="text-primary">@ViewBag.BrojRezervacija</span></div>
                    </div>

                </div>

                <div class="mt-5 text-end">
                    <button class="btn btn-lg btn-danger" type="button" data-bs-toggle="modal" data-bs-target="#potvrdaBrisanja">Obriši nalog</button>
                </div>

                <!-- Modal -->
                <div class="modal fade" id="potvrdaBrisanja" tabindex="-1" aria-labelledby="potvrdaBrisanja" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="ModalLabel">Potvrdi brisanje</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Da li ste sigurni da želite da obrišete nalog? Sve rezervacije će biti otkazane!
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Nazad</button>
                                <a class="btn btn-danger" asp-controller="Account" asp-action="ObrisiNalog">Obriši</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</section>
