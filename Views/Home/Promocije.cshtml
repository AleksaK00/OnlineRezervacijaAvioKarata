@model List<PromocijaBO>

<article class="container mt-5 mb-5">

    <!-- Karusela sa 3 razlicite ponude linija, na klik pretrazuje sve letove promovisane rute -->
    <div class="row justify-content-center">
        <div class="col-md-9">

            <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">

                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>

                <div class="carousel-inner">

                    <!-- Onclick akcije popunjavaju search formu i pretrazuju letove Beograd - Pritisnuti grad -->
                    <div class="carousel-item active">
                        <img src="~/images/Promo/@(Model[0].Destinacija + ".jpg")" class="d-block w-100" alt="Slika @Model[0].Destinacija" onclick="PretragaPromo('formaCarousel1')">
                        <div class="carousel-captionTopText d-none d-md-block">
                            <h4 onclick="PretragaPromo('formaCarousel1')">Beograd - @Model[0].Destinacija</h4>
                            <p onclick="PretragaPromo('formaCarousel1')">@Model[0].Tekst</p>
                            <form method="post" action="" name="formaCarousel1">
                                <input type="hidden" name="polazniAerodrom" value="Beograd">
                                <input type="hidden" name="dolazniAerodrom" value="@Model[0].Destinacija">
                            </form>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <img src="~/images/Promo/@(Model[1].Destinacija + ".jpg")" class="d-block w-100" alt="Slika @Model[1].Destinacija" onclick="PretragaPromo('formaCarousel2')">
                        <div class="carousel-caption d-none d-md-block">
                            <h4 onclick="PretragaPromo('formaCarousel2')">Beograd - @Model[1].Destinacija</h4>
                            <p onclick="PretragaPromo('formaCarousel2')">@Model[1].Tekst</p>
                            <form method="post" action="" name="formaCarousel2">
                                <input type="hidden" name="polazniAerodrom" value="Beograd">
                                <input type="hidden" name="dolazniAerodrom" value="@Model[1].Destinacija">
                            </form>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <img src="~/images/Promo/@(Model[2].Destinacija + ".jpg")" class="d-block w-100" alt="Slika @Model[2].Destinacija" onclick="PretragaPromo('formaCarousel3')">
                        <div class="carousel-caption d-none d-md-block">
                            <h4 onclick="PretragaPromo('formaCarousel3')">Beograd - @Model[2].Destinacija</h4>
                            <p onclick="PretragaPromo('formaCarousel3')">@Model[2].Tekst</p>
                            <form method="post" action="" name="formaCarousel3">
                                <input type="hidden" name="polazniAerodrom" value="Beograd">
                                <input type="hidden" name="dolazniAerodrom" value="@Model[2].Destinacija">
                            </form>
                        </div>
                    </div>

                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>

            </div>
        </div>
    </div>

</article>

